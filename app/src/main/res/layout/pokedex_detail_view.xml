<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPokemon"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_alignLeft="@+id/cardView"
            android:layout_alignStart="@+id/cardView"
            android:layout_alignTop="@+id/imgPokemonShiny"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:contentDescription="@string/picture_description" />

        <ImageView
            android:id="@+id/imgPokemonShiny"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_alignEnd="@+id/cardView"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/cardView"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="75dp"
            android:contentDescription="@string/picture_description" />

        <ImageView
            android:id="@+id/imgSecondaryType"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_above="@+id/imgPokemon"
            android:layout_alignEnd="@+id/cardView"
            android:layout_alignRight="@+id/cardView"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:contentDescription="@string/picture_description" />

        <ImageView
            android:id="@+id/imgPrimaryType"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_above="@+id/imgSecondaryType"
            android:layout_alignLeft="@+id/imgSecondaryType"
            android:layout_alignStart="@+id/imgSecondaryType"
            android:contentDescription="@string/picture_description" />

        <TextView
            android:id="@+id/textShiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imgPokemonShiny"
            android:layout_alignLeft="@+id/imgPokemonShiny"
            android:layout_alignRight="@+id/imgPokemonShiny"
            android:layout_alignStart="@+id/imgPokemonShiny"
            android:layout_below="@+id/imgPokemonShiny"
            android:text="@string/text_shiny_sprite"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imgPokemon"
            android:layout_alignLeft="@+id/imgPokemon"
            android:layout_alignRight="@+id/imgPokemon"
            android:layout_alignStart="@+id/imgPokemon"
            android:layout_below="@+id/imgPokemon"
            android:gravity="center_horizontal"
            android:text="@string/text_default_sprite"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cardView"
            android:layout_alignStart="@+id/cardView"
            android:layout_alignTop="@+id/imgPrimaryType"
            android:gravity="start"
            android:text="@string/pokemonNamePlaceholder"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@id/textDefault"
            android:id="@+id/cardView"
            style="@style/MyCardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/maxCp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/placeholder2"
                        android:textAlignment="center"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/buddyDistanceValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder2"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/stats"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/attackValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder1"
                        android:textAlignment="center" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <TextView
                        android:id="@+id/defenceValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder1"
                        android:textAlignment="center" />

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <TextView
                        android:id="@+id/staminaValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder1"
                        android:textAlignment="center" />

                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <!-- <ExpandableListView        // TODO spÃ¤ter implementieren
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ExpandableListView> -->

                    <TextView
                        android:id="@+id/moves"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/moves"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/movesetsFast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:text=""
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/movesetsCharge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text=""
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/advancedDetailsHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/advancedDetailsHeader"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/attackProbability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:text="@string/placeholder2"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/baseFleeRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:text="@string/placeholder2"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/baseCaptureRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:text="@string/placeholder2"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/dodgeProbability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:text="@string/placeholder2"
                        android:textAlignment="center" />

                </LinearLayout>
                <!--
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <Button
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="@string/showMovesButton"
                                       android:theme="@style/PrimaryFlatButton" />

                                   <Button
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="@string/showDetailsButton"
                                       android:theme="@style/PrimaryFlatButton" />

                               </LinearLayout>
                               -->
            </LinearLayout>

        </android.support.v7.widget.CardView>




    </RelativeLayout>
</ScrollView>
